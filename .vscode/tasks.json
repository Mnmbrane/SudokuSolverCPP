{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "remove bin",
			"command": "rm",
			"args": [
				"-rf",
				"bin"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "create bin",
			"command": "mkdir",
			"args": [
				"bin"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${workspaceFolder}/bin/sudoku.a"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "build",
			"dependsOn":
			[
				"remove bin",
				"create bin",
				"g++ build active file"
			],
			"group": "build"
		}
	]
}