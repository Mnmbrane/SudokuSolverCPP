{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "remove bin",
			"command": "rm",
			"args": [
				"-rf",
				"bin"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "create bin",
			"command": "mkdir",
			"args": [
				"bin"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "remove lib",
			"command": "rm",
			"args": [
				"-rf",
				"lib"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "create lib",
			"command": "mkdir",
			"args": [
				"lib"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"-I${workspaceFolder}/include",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${workspaceFolder}/bin/sudoku.o",
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "build lib",
			"command": "ar",
			"args": [
				"-rcs",
				"${workspaceFolder}/lib/libsudoku.a",
				"${workspaceFolder}/bin/sudoku.o",
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "build tests",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"-I${workspaceFolder}/include",
				"-L${workspaceFolder}/lib/",
				"-L${workspaceFolder}/unittests/googletest/",
				"${workspaceFolder}/unittests/*.cpp",
				"-o",
				"${workspaceFolder}/unittests/unittest.o",
				"-lsudoku"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "build",
			"dependsOrder": "sequence",
			"dependsOn":
			[
				"remove bin",
				"create bin",
				"remove lib",
				"create lib",
				"g++ build active file",
				"build lib",
				"build tests"
			],
			"group": "build"
		}
	]
}